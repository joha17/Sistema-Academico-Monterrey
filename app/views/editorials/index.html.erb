<% if current_user %>
<% if can? :show, Editorial %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Editoriales</h1>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
  <!-- Default panel contents -->
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-1">
                <%if can? :create, Editorial %>
                  <%= link_to "", new_editorial_path , class: "btn btn-success glyphicon glyphicon-plus" %>
                <%end%>
              </div>
            </div>
          </div>
      <table class="table">
        <thead>
          <tr>
            <th>Nombre de Editorial</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @editorials.each do |editorial| %>
            <tr>
              <td><%= editorial.NomEdi %></td>
              <td><%= link_to 'Show', editorial %></td>
              <td><%= link_to 'Edit', edit_editorial_path(editorial) %></td>
              <td><%= link_to 'Destroy', editorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
<br>



<%else%>
<div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

