<body class="color-blue">
  <% if current_user %>
<% if can? :show, Item %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="orange">Inventario</h1>
    </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="panel panel-default">
      <!-- Default panel contents -->
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-1">
          <%if can? :create, Item %>
            <%= link_to "", new_item_path , class: "btn btn-success glyphicon glyphicon-plus" %>
          <%end%>
            </div>
            </div>
            </div>

          <%= form_tag(items_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Busque el articulo aqui" %>
            <%= submit_tag "Buscar" %>
          <% end %>

            <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Usuario</th>
            <th>Lugar</th>
            <th>Categoria</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.nomItem %></td>
              <td><%= item.desItem %></td>
              <td><%= item.user.NomUs %></td>
              <td><%= item.place.NomPlace %></td>
              <td><%= item.category.nomCategory %></td>
              <% if can? :show, Item %>
                <td><%= link_to '', item, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
              <% end %>
              <% if can? :update, Item %>
                <td><%= link_to '', edit_item_path(item), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
              <%end%>
              <% if can? :delete, Item %>
                <td><%= link_to '', item, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
       </div>
     </div>
   </div>
  </div>
  </div>
  <div class="text-center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

<br>
<br><br><br>

<%else%>
<div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>


          
</body>
