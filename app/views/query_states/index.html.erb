<% if current_user %>
<p id="notice"><%= notice %></p>

<h1>Listing Query States</h1>

<table>
  <thead>
    <tr>
      <th>Descon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @query_states.each do |query_state| %>
      <tr>
        <td><%= query_state.DeState %></td>
        <td><%= link_to 'Show', query_state %></td>
        <td><%= link_to 'Edit', edit_query_state_path(query_state) %></td>
        <td><%= link_to 'Destroy', query_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Query state', new_query_state_path %>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>
