<body class="color-blue">
  <% if current_user %>
  <% if can? :show, QueryState %>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h1 class="orange">Estado de Consulta</h1>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="panel panel-default">
    <!-- Default panel contents -->
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-1">
                  <%if can? :create, QueryState %>
                    <%= link_to "", new_query_state_path , class: "btn btn-success glyphicon glyphicon-plus" %>
                  <%end%>
                </div>
              </div>
            </div>
        <table class="table">
          <thead>
            <tr>
              <th>Nombre de Editorial</th>
              <th colspan="3"></th>
            </tr>
          </thead>
  <tbody>
    <% @query_states.each do |query_state| %>
      <tr>
        <td><%= query_state.DeState %></td>
        <td><%= link_to '', query_state, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to '', edit_query_state_path(query_state), class: "btn btn-primary glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', query_state, method: :delete, class: "btn btn-primary glyphicon glyphicon-trash", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%else%>
<div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

</body>
