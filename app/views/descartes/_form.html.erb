<body class="color-blue">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
      </div>

            <%= form_for(@descarte) do |f| %>
              <% if @descarte.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@descarte.errors.count, "error") %> Verifique que todos los datos esten completos:</h2>

                  <ul>
                  <% @descarte.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>



              <div class="row">
                  <div class="col-sm-10 col-sm-offset-1">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                      <div class="row">
                        <div class="col-md-3">
                          <h4>Sugiero Descartar</h4>
                        </div>
                      </div>
                    </div>
                      <table class="table table-striped">
                        <thead>
                        <tr>
                          <th>Autor</th>
                          <th>Libro</th>
                          <th>Cantidad</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <td><%= collection_select(:descarte, :libro_id, Libro.all, :id, :AutLib, prompt: true) %></td>
                        <td><%= collection_select(:descarte, :libro_id, Libro.all, :id, :TitLib, prompt: true) %></td>
                        <td><%= f.text_field :CantLibDesc, autofocus: true, class: "form-control" %></td>
                      </tbody>
                      </table>
                    </div>
                  </div>



                      <div class="panel-heading">
                      <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                          <div class="panel panel-default">

                              <div class="panel-heading">
                              <h3 class="panel-title">Observaciones</h3>
                              </div>
                              <div class="panel-body">
                                <%= f.text_area :ObsDesc, autofocus: true, class: "form-control" %>
                              </div>
                              <br>
                              <strong class="blue"> Asignatura</strong><br>
                              <%= collection_select(:descarte, :signatura_id, Signatura.all, :id, :nomSig, prompt: true) %>
                              <div class="panel-heading">
                              <h3 class="panel-title"></h3>
                              </div>
                              <div class="panel-body">

                              </div>
                            </div>
                            <div class="actions text-center">
                              <%= f.submit "Aceptar", class: "btn btn-success" %>
                            </div>
                          <br>
                        </div>
                      </div>
                    </div>
              <% end %>
              </div>
  <br><br><br>

</body>
