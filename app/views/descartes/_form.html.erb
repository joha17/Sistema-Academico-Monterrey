<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
    </div>
    
          <%= form_for(@descarte) do |f| %>
            <% if @descarte.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@descarte.errors.count, "error") %> prohibited this descarte from being saved:</h2>

                <ul>
                <% @descarte.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

           

            
          <div class="row">

             <div class="panel-heading">
                  <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                      <div class="panel panel-default">
                        
                          <div class="panel-heading">
                          <h3 class="panel-title">Signatura</h3>
                          </div>
                          <div class="panel-body">
                            <%= collection_select(:descarte, :signatura_id, Signatura.all, :id, :nomSig, prompt: true) %>
                          </div>
                        </div>
                      
                    </div>
                  </div>
                </div>

            <div class="col-sm-10 col-sm-offset-1">
              
              <div class="panel panel-default">
              <!-- Default panel contents -->
                  <div class="panel-heading">
                  <div class="row">
                    <div class="col-md-3">
                      <h4>Sugiero Adquirir</h4>
                    </div>
                  </div>
                </div>
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Autor</th>
                      <th>Libro</th>
                      <th>Cantidad</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td><%= f.text_field :autLibSug, autofocus: true, class: "form-control"%></td>
                    <td><%= f.text_field :titLibSug,  autofocus: true, class: "form-control"%></td>
                    <td><%= f.text_field :cantLibSug, autofocus: true, class: "form-control" %></td>
                  </tbody>
                  </table>
                </div>
              </div>
          </div>

          <div class="row">
              <div class="col-sm-10 col-sm-offset-1">
                <div class="panel panel-default">
                  <div class="panel-heading">
                  <div class="row">
                    <div class="col-md-3">
                      <h4>Sugiero Descartar</h4>
                    </div>
                  </div>
                </div>
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Autor</th>
                      <th>Libro</th>
                      <th>Cantidad</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td><%= collection_select(:descarte, :libro_id, Libro.all, :id, :AutLib, prompt: true) %></td>
                    <td><%= collection_select(:descarte, :libro_id, Libro.all, :id, :TitLib, prompt: true) %></td>
                    <td><%= f.text_field :cantLibDes, autofocus: true, class: "form-control" %></td>
                  </tbody>
                  </table>
                </div>
              </div>
          
                 

                  <div class="panel-heading">
                  <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                      <div class="panel panel-default">
                        
                          <div class="panel-heading">
                          <h3 class="panel-title">Observaciones</h3>
                          </div>
                          <div class="panel-body">
                            <%= f.text_area :obserDesc, autofocus: true, class: "form-control" %>
                          </div>

                          <div class="panel-heading">
                          <h3 class="panel-title">Fecha</h3>
                          </div>
                          <div class="panel-body">
                            <%= f.date_select :fechaDesc %>
                          </div>

                          <div class="panel-heading">
                          <h3 class="panel-title"></h3>
                          </div>
                          <div class="panel-body">
                            <div class="actions text-center">
                              <%= f.submit %>
                            </div> 
                          </div>
                        </div>
                      <br>
                    </div>
                  </div>
                </div>
          <% end %>
    </div>
  </div>
</div>
<br><br><br>