<body class="color-blue">
  <% if current_user %>
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <p id="notice"><%= notice %></p>
      <div class="row">
                  

          <div class="row">
            <div class="panel-heading">
                  <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                      <div class="panel panel-default">
                        
                          <div class="panel-heading">
                          <h3 class="panel-title">Signatura</h3>
                          </div>
                          <div class="panel-body">
                            <%= @descarte.signatura.nomSig %>
                          </div>
                        </div>
                      
                      <br>
                    </div>
                  </div>
                </div>
            <div class="col-sm-10 col-sm-offset-1">
              
              <div class="panel panel-default">
              <!-- Default panel contents -->
                  <div class="panel-heading">
                  <div class="row">
                    <div class="col-md-3">
                      <h4>Sugiero Adquirir</h4>
                    </div>
                  </div>
                </div>
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Autor</th>
                      <th>Libro</th>
                      <th>Cantidad</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td><%= @descarte.autLibSug %></td>
                    <td><%= @descarte.titLibSug %></td>
                    <td><%= @descarte.cantLibSug %></td>
                  </tbody>
                  </table>
                </div>
              </div>
          </div>

          <div class="row">
              <div class="col-sm-10 col-sm-offset-1">
                <div class="panel panel-default">
                  <div class="panel-heading">
                  <div class="row">
                    <div class="col-md-3">
                      <h4>Sugiero Descartar</h4>
                    </div>
                  </div>
                </div>
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Autor</th>
                      <th>Libro</th>
                      <th>Cantidad</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <td><%= @descarte.libro.AutLib %></td>
                    <td><%= @descarte.libro.TitLib %></td>
                    <td><%= @descarte.cantLibDes %></td>
                  </tbody>
                  </table>
                </div>
              </div>
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                      <div class="panel panel-default">
                        
                          <div class="panel-heading">
                          <h3 class="panel-title">Observaciones</h3>
                          </div>
                          <div class="panel-body">
                            <%= @descarte.obserDesc %>
                          </div>

                          <div class="panel-heading">
                          <h3 class="panel-title">Fecha</h3>
                          </div>
                          <div class="panel-body">
                            <%= @descarte.fechaDesc %>
                          </div>

                          <div class="panel-heading">
                          <h3 class="panel-title">Usuario</h3>
                          </div>
                          <div class="panel-body">
                            <%= @descarte.user.NomUs %>
                          </div>

                        </div>
                      
                      <br>
                    </div>
                  </div>
                </div>
                <p><%= link_to "Ir al listado de Descartes o Sugerencias", descartes_path, class: "orange" %></p>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br><br>
  <%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

</body>
