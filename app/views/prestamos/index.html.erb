<% if current_user %>
<% if can? :show, Prestamo %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Prestamos</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-1">
    <%if can? :create, Prestamo %>
      <%= link_to "", new_prestamo_path , class: "btn btn-success glyphicon glyphicon-plus" %>
    <%end%>

      </div>
      </div>
      </div>
      <%= form_tag(prestamos_path, :method => "get", TitLib: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Busque el titulo del libro" %>
        <%= submit_tag "Buscar" %>
      <% end %>
      <table class="table">
  <thead>
    <tr>
      <th>Numero de Inscripcion</th>
      <th>Fecha de Solicitud</th>
      <th>Usuario</th>
      <th>Libro</th>
      <th>Autor</th>
      <th>Prestamo estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.libro.id %></td>
        <td><%= prestamo.fecSol %></td>
        <td><%= prestamo.user.NomUs %></td>
        <td><%= prestamo.libro.TitLib %></td>
        <td><%= prestamo.libro.AutLib %></td>
        <td><%= prestamo.prestamo_estado.nomEstPres %></td>
        <% if can? :read, Prestamo %>
          <td><%= link_to '', prestamo, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
        <%end%>
        <% if can? :update, prestamo %>
          <td><%= link_to '', edit_prestamo_path(prestamo), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
        <%end%>
        <%if can? :delete, prestamo%>
          <td><%= link_to '', prestamo, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
    </div>
    </div>

<br>
<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>


