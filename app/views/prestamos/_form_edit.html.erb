<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@prestamo) do |f| %>
        <% if @prestamo.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@prestamo.errors.count, "error") %> Verifique que todos los datos esten completos:</h2>

            <ul>
            <% @prestamo.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <strong>Signtura</strong><br>
          <%= collection_select(:prestamo, :signatura_id, Signatura.all, :id, :nomSig, prompt: true) %>
        </div>

        <br>
        <div class="field">
          <strong>Libro</strong><br>
          <%= collection_select(:prestamo, :libro_id, Libro.all, :id, :TitLib, prompt: true) %>
        </div>


        <div class="field">
          <strong>Nombre</strong><br>
          <%= f.text_field :nomSolic, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <strong>Seccion</strong><br>
          <%= f.text_field :seccion, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <strong>Telefono del Solicitante</strong><br>
          <%= f.text_field :telSolic, autofocus: true, class: "form-control" %>
        </div>
        <br>
        <div class="field">
          <strong>Nombre del docente </strong>
          <br>
          <%= f.text_field :nomDocente, autofocus: true, class: "form-control" %>
        </div>

        <br>
        <% if can? :show, Prestamo %>
        <div class="field">
          <strong>Estado Prestamo</strong><br>
          <%= collection_select(:prestamo, :prestamo_estado_id, PrestamoEstado.all, :id, :nomEstPres, prompt: true) %>
        </div>
        <% end %>
        <br>
        <div class="text-center">
          <%= f.submit "Aceptar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
