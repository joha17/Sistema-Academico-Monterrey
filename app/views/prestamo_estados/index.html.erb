<body class="color-blue">
  <% if current_user %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Estados de Prestamo</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
      <div class="row">
        <div class="col-md-1">
    <%if can? :create, PrestamoEstado %>
      <%= link_to "", new_prestamo_estado_path , class: "btn btn-success glyphicon glyphicon-plus" %>
    <%end%>

      </div>
      </div>
      </div>
<table class="table">
  <thead>
    <tr>
      <th>Nomestpres</th>
      <th>Desestpres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamo_estados.each do |prestamo_estado| %>
      <tr>
        <td><%= prestamo_estado.nomEstPres %></td>
        <td><%= prestamo_estado.desEstPres %></td>
        <td><%= link_to 'Show', prestamo_estado %></td>
        <td><%= link_to 'Edit', edit_prestamo_estado_path(prestamo_estado) %></td>
        <td><%= link_to 'Destroy', prestamo_estado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

</body>
