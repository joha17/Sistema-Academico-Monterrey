<body class="color-blue">
  <% if current_user %>
<% if can? :show, Query %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="orange">Consultas</h1>
    </div>
    <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
  <!-- Default panel contents -->
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-1">
            <%if can? :create, Query %>
              <%= link_to "", new_query_path , class: "btn btn-success glyphicon glyphicon-plus" %>
            <%end%>
          </div>
        </div>
      </div>
      <div class="panel-body fixed-panel">
        <table class="table">
        <thead>
          <tr>
            <th>Consulta</th>
            <th>Descripci√≥n</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Estado</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @queries.each do |query| %>
            <tr>
              <td><%= query.NomCon %></td>
              <td><%= query.DesCon %></td>
              <td><%= query.FecCon %></td>
              <td><%= query.user.NomUs %></td>
              <td><%= query.query_state.DeState %></td>
              <% if can? :show, query %>
                <td><%= link_to '', query, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
              <% end %>
              <% if can? :update, query %>
                <td><%= link_to '', edit_query_path(query), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
              <% end %>
              <% if can? :delete, query %>
                <td><%= link_to '', query, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning glyphicon glyphicon-trash" %></td>
              <%end%>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  </div>

<br>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

