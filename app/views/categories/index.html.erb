<% if current_user %>
<% if can? :show, Category %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Categorias</h1>
    </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="panel panel-default">
      <!-- Default panel contents -->
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-1">
          <%if can? :create, Item %>
            <%= link_to "", new_category_path , class: "btn btn-success glyphicon glyphicon-plus" %>
          <%end%>
            </div>
            </div>
            </div>


            <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.id %></td>
                  <td><%= category.nomCategory %></td>
                  <td><%= category.desCategory %></td>
                  <td><%= link_to 'Ver', category %></td>
                  <td><%= link_to 'Editar', edit_category_path(category) %></td>
                  <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%else%>
            <div class="alert alert-danger" role="alert">No estas Autorizado</div>
          <%end%>

          <%else%>
            <div class="alert alert-danger" role="alert">No estas Autorizado</div>
          <%end%>