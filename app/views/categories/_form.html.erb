          <%= f.label :desCategory %><br>
          <%= f.text_area :desCategory, autofocus: true, class: "form-control" %>
        </div>
        <br>
          <div class="text-center">
            <%= f.submit "Aceptar", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>