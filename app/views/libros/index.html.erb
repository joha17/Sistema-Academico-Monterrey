<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Libros</h1>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
  <!-- Default panel contents -->
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-1">
                <%if can? :create, Libro %>
                  <%= link_to "", new_libro_path , class: "btn btn-success glyphicon glyphicon-plus" %>
                <%end%>
              </div>
            </div>
          </div>
          <table class="table">
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Autor</th>
              <th>Editorial</th>
              <th>Edicion</th>
              <th>AÃ±o</th>
              <th>Lugar del libro</th>
              <th>Codigo Deway</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @libros.each do |libro| %>
              <tr>
                <td><%= libro.TitLib %></td>
                <td><%= libro.AutLib %></td>
                <td><%= libro.editorial.NomEdi %></td>
                <td><%= libro.EdicLib %></td>
                <td><%= libro.AnioLib %></td>
                <td><%= libro.LugLib %></td>
                <td><%= libro.CodDewLib %></td>
                <% if can? :show, Libro %>
                  <td><%= link_to '', libro, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
                <% end %>
                <% if can? :update, Libro %>
                  <td><%= link_to '', edit_libro_path(libro), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
                <% end %>
                <% if can? :delete, Libro %>
                  <td><%= link_to '', libro, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>


  

