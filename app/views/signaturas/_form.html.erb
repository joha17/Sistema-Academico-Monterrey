<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@signatura) do |f| %>
        <% if @signatura.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@signatura.errors.count, "error") %> Verifique que todos los datos esten completos:</h2>

            <ul>
            <% @signatura.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
  <div class="field">
    <strong>Nombre de Signatura</strong><br>
    <%= f.text_field :nomSig, autofocus: true, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Aceptar", class: "btn btn-success" %>
  </div>
<% end %>
