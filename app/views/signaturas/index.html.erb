<body class="color-blue">
  <% if current_user %>
  <% if can? :show, Signatura %>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h1 class="orange">Signaturas</h1>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="panel panel-default">
    <!-- Default panel contents -->
            <div class="panel-heading">
              <div class="row">
                <div class="col-md-1">
                  <%if can? :create, Signatura %>
                    <%= link_to "", new_signatura_path , class: "btn btn-success glyphicon glyphicon-plus" %>
                  <%end%>
                </div>
              </div>
            </div>
        <table class="table">
          <thead>
            <tr>
              <th>Nombre de la signatura</th>
              <th colspan="3"></th>
            </tr>
          </thead>

  <tbody>
    <% @signaturas.each do |signatura| %>
      <tr>
        <td><%= signatura.nomSig %></td>
        <td><%= link_to '', signatura, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to '', edit_signatura_path(signatura), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', signatura, method: :delete, class: "btn btn-warning glyphicon glyphicon-trash", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
<br>


<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>
<%else%>
<div class="alert alert-danger" role="alert">No estas Autorizado</div>
  <%end%>
