<body class="color-blue">
<% if current_user %>
<% if can? :show, Evento %>
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <p id="notice"><%= notice %></p>
      <div class="jumbotron color-white2">
        <div class="container">

			<p>
			  <strong class="orange">Evento:</strong>
			  <%= @evento.NomEven %>
			</p>

			<p>
			  <strong class="orange">Fecha del evento:</strong>
			  <%= @evento.FecEvent.strftime("%d-%m-%Y Hora: %H:%M") %>
			</p>

			<p>
			  <strong class="orange">Objetivos:</strong>
			  <%= @evento.objEven %>
			</p>

			<p>
			  <strong class="orange">Responsables:</strong>
			  <%= @evento.respEven %>
			</p>

			<p>
			  <strong class="orange">Participantes:</strong>
			  <%= @evento.partEven %>
			</p>

			<p>
			  <strong class="orange">Actividades:</strong>
			  <%= @evento.DesEven %>
			</p>

			<p>
			  <strong class="orange">Usuario:</strong>
			  <%= @evento.user.NomUs %> <%= @evento.user.ApUnoUs %> <%= @evento.user.ApDosUs %>
			</p>
			<br>
			<p><%= link_to "Ir al listado de Eventos", eventos_path %></p>
		</div>
	</div>
</div>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>
<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>
</body>
