
<% if current_user %>
<% if can? :show, Role %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Roles</h1>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
  <!-- Default panel contents -->
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-1">
                <%if can? :create, Role %>
                  <%= link_to "", new_role_path , class: "btn btn-success glyphicon glyphicon-plus" %>
                <%end%>
              </div>
            </div>
          </div>

          <table class="table">
          <thead>
            <tr>
              <th>Role ID</th>
              <th>Nombre Rol</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.id %></td>
                <td><%= role.nomRole %></td>
                <% if can? :show, Role %>
                  <td><%= link_to '', Role, class: "btn btn-primary glyphicon glyphicon-eye-open" %></td>
                <% end %>
                <% if can? :update, Role %>
                  <td><%= link_to '', edit_role_path(role), class: "btn btn-info glyphicon glyphicon-pencil" %></td>
                <% end %>
                <% if can? :delete, role %>
                  <td><%= link_to '',role, class: "btn btn-warning glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>


<%else%>
<div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

<%else%>
  <div class="alert alert-danger" role="alert">No estas Autorizado</div>
<%end%>

  

